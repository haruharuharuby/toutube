%p#notice= notice

%p
  = render partial: "my_menu", locals: {user: @user}

%p
  %b User:
  = @user.name

%p
  登録チャンネル
  .channels-container
    - @user.my_favorite_channels.each do |c|
      .channel-name
        = c.name
      .channel-link
        = link_to image_tag(c.videos.first.uri_url(:thumb)), channel_path(c)
