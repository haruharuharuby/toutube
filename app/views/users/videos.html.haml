%p#notice= notice

%p
  = content_for(:submenu) do
    %ul
      %li
        = link_to "home", home_user_path(@user)
      %li
        = link_to "videos", videos_user_path(@user)
      %li
        = link_to "playlists", playlists_user_path(@user)
      %li
        = link_to "channels", channels_user_path(@user)
      %li
        = link_to "descriptions", description_user_path(@user)


%p
  %b Name:
  = @user.name
  .video-index-container
    - @user.videos.each do |video|
      %ul
        %li
          .thumbnail
            = image_tag video.uri_url(:thumb) if video.uri?
          .information
            %b 'author'
            = video.channel.name
            %br
            %b 'interactions'
            = video.rating.interactions
            %br
            %b 'uploaded_at'
            = video.created_at
            %br
            %b
            = link_to video.title, video
